<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ui.home.Contact.ContactActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:lottie_rawRes="@raw/contact"
            app:lottie_autoPlay="true"
            android:layout_margin="10dp"
            app:lottie_loop="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTACT"
            android:textSize="30sp"
            android:fontFamily="@font/nunito"
            android:textStyle="bold"/>

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email : "
                android:fontFamily="@font/nunito"
                android:textSize="18sp"
                android:layout_margin="10dp"/>


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="InnovativeSolutions@gmail.com"
                android:fontFamily="@font/nunito"
                android:clickable="true"
                android:textColorHighlight="@color/gray"
                android:linksClickable="true"
                android:textColorLink="@color/primary"
                android:focusable="true"
                android:autoLink="email"
                android:textSize="18sp"
                android:layout_margin="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact No : "
                android:fontFamily="@font/nunito"
                android:textSize="18sp"
                android:layout_margin="10dp"/>


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9697981736"
                android:fontFamily="@font/nunito"
                android:textSize="18sp"
                android:autoLink="phone"
                android:linksClickable="true"
                android:textColorHighlight="@color/gray"
                android:textColorLink="@color/primary"
                android:layout_margin="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website : "
                android:fontFamily="@font/nunito"
                android:textSize="18sp"
                android:layout_margin="10dp"/>


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="InnovativeSolutions.com"
                android:fontFamily="@font/nunito"
                android:textSize="18sp"
                android:linksClickable="true"
                android:textColorLink="@color/primary"
                android:textColorHighlight="@color/gray"
                android:autoLink="web"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/share"
            android:backgroundTint="@color/primary"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito"
            android:drawableLeft="@drawable/outline_share_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/chat"
            android:backgroundTint="@color/primary"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito"
            android:drawableLeft="@drawable/outline_chat_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat with us"/>

    </LinearLayout>

</LinearLayout>